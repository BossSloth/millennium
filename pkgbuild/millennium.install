#!/bin/bash

post_install() {
    # Link millennium to the Steam runtime
    ln -s /usr/lib/millennium/libmillennium_bootstrap_86x.so ~/.local/share/Steam/ubuntu12_32/libXtst.so.6
}

post_remove() {
    # Remove the symlink created during post_install
    rm -f ~/.local/share/Steam/ubuntu12_32/libXtst.so.6
}